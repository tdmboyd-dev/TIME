{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["backend/core/*"],
      "@engines/*": ["backend/engines/*"],
      "@bots/*": ["backend/bots/*"],
      "@utils/*": ["backend/utils/*"],
      "@types/*": ["backend/types/*"],
      "@api/*": ["backend/api/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "frontend", "src/__tests__/**/*", "**/*.test.ts", "**/*.spec.ts"]
}
