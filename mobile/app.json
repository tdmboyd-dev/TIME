{
  "expo": {
    "name": "TIME BEYOND US",
    "slug": "time-beyond-us",
    "version": "1.0.0",
    "scheme": "timebeyondus",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#020617"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.timebeyondus.trading",
      "associatedDomains": [
        "applinks:timebeyondus.com",
        "webcredentials:timebeyondus.com"
      ],
      "infoPlist": {
        "NSFaceIDUsageDescription": "Allow TIME BEYOND US to use Face ID for secure authentication",
        "NSCameraUsageDescription": "Allow camera access for QR code scanning and document verification",
        "NSLocationWhenInUseUsageDescription": "Find nearby brokers and financial services",
        "NSLocationAlwaysUsageDescription": "Enable location-based price alerts and market notifications",
        "NSPhotoLibraryUsageDescription": "Upload documents for account verification",
        "NSMicrophoneUsageDescription": "Use voice commands for trading",
        "NSSiriUsageDescription": "Ask Siri to check your portfolio and market data",
        "NFCReaderUsageDescription": "Connect hardware wallets and security keys",
        "NSHealthShareUsageDescription": "Track stress levels during trading sessions",
        "NSHealthUpdateUsageDescription": "Record trading session wellness data",
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "remote-notification",
          "fetch"
        ]
      },
      "buildNumber": "17",
      "config": {
        "usesNonExemptEncryption": false
      },
      "entitlements": {
        "aps-environment": "production",
        "com.apple.developer.associated-domains": [
          "applinks:timebeyondus.com",
          "webcredentials:timebeyondus.com"
        ],
        "com.apple.developer.applesignin": [
          "Default"
        ],
        "com.apple.developer.in-app-payments": [
          "merchant.com.timebeyondus.trading"
        ],
        "com.apple.developer.nfc.readersession.formats": [
          "TAG"
        ],
        "com.apple.developer.siri": true,
        "com.apple.developer.healthkit": true
      },
      "usesAppleSignIn": true,
      "usesIcloudStorage": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#020617"
      },
      "package": "com.timebeyondus.trading",
      "versionCode": 14,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "VIBRATE",
        "RECEIVE_BOOT_COMPLETED",
        "CAMERA",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "timebeyondus.com",
              "pathPrefix": "/app"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow TIME BEYOND US to use Face ID for secure authentication"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 34,
            "targetSdkVersion": 34,
            "buildToolsVersion": "34.0.0"
          },
          "ios": {
            "deploymentTarget": "15.0"
          }
        }
      ],
      "expo-font"
    ],
    "extra": {
      "apiUrl": "https://time-backend-hosting.fly.dev/api/v1",
      "wsUrl": "wss://time-backend-hosting.fly.dev",
      "eas": {
        "projectId": "26adeff7-1d4d-427c-9278-c9c37a4c429c"
      }
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "owner": "timebeunus"
  }
}
