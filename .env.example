# TIME Meta-Intelligence Trading Governor
# Environment Configuration
# Copy this to .env and fill in your values

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=3001
API_VERSION=v1

# ===========================================
# DATABASE (Optional - TIME works with in-memory fallback)
# ===========================================
MONGODB_URI=mongodb://localhost:27017/time_db
REDIS_URL=redis://localhost:6379

# ===========================================
# AUTHENTICATION
# ===========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ===========================================
# ADMIN CONFIGURATION
# ===========================================
ADMIN_EMAIL=your-email@example.com
ADMIN_PHONE=+1234567890

# ===========================================
# EVOLUTION MODE
# ===========================================
# Options: controlled | autonomous
DEFAULT_EVOLUTION_MODE=controlled

# ===========================================
# INACTIVITY FAILSAFE
# ===========================================
INACTIVITY_WARNING_DAYS=3
INACTIVITY_FINAL_WARNING_DAYS=4
INACTIVITY_AUTONOMOUS_SWITCH_DAYS=5

# ===========================================
# NOTIFICATION PROVIDERS (Optional)
# ===========================================
# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ===========================================
# EXCHANGE API KEYS (Demo/Paper Trading)
# ===========================================
# Binance
BINANCE_API_KEY=
BINANCE_SECRET=
BINANCE_TESTNET=true

# Bybit
BYBIT_API_KEY=
BYBIT_SECRET=
BYBIT_TESTNET=true

# ===========================================
# BROKER API KEYS
# ===========================================
# Alpaca (FREE - https://alpaca.markets)
ALPACA_API_KEY=
ALPACA_SECRET_KEY=
ALPACA_PAPER=true

# OANDA (https://www.oanda.com)
OANDA_API_KEY=
OANDA_ACCOUNT_ID=
OANDA_PRACTICE=true

# ===========================================
# MARKET DATA PROVIDERS (ALL FREE!)
# ===========================================
# Alpha Vantage (FREE - https://www.alphavantage.co/support/#api-key)
ALPHA_VANTAGE_API_KEY=

# Finnhub (FREE - https://finnhub.io/register)
FINNHUB_API_KEY=

# Polygon.io (FREE tier - https://polygon.io)
POLYGON_API_KEY=

# TwelveData (FREE - https://twelvedata.com)
TWELVE_DATA_API_KEY=

# Financial Modeling Prep (FREE - https://financialmodelingprep.com)
FMP_API_KEY=

# FRED Federal Reserve (FREE - https://fred.stlouisfed.org/docs/api/api_key.html)
FRED_API_KEY=

# ===========================================
# AI PROVIDERS (Optional)
# ===========================================
OPENAI_API_KEY=

# ===========================================
# BLOCKCHAIN/WEB3 (Optional)
# ===========================================
ALCHEMY_API_KEY=

# ===========================================
# BOT RESEARCH PIPELINE
# ===========================================
# GitHub Token for bot fetching (https://github.com/settings/tokens)
GITHUB_TOKEN=
ENABLE_BOT_SCRAPING=true
BOT_REVIEW_MIN_RATING=4.0

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/time.log

# ===========================================
# FRONTEND
# ===========================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
